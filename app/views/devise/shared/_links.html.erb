<%- if controller_name != 'sessions' %>
  <div class="row d-flex sign-up-action">
    <div class="col-6"> <p>Already have an account?</p> </div>
    <div class="col-6"> <p><%= link_to "Log in", new_session_path(resource_name), :class => "btn btn-sm btn-outline-primary" %></p></div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
<div class="row d-flex sign-up-action">
  <div class="col-6"> <p>Donâ€™t have an account?</p> </div>
  <div class="col-6"> <p><%= link_to " Sign up", new_registration_path(resource_name), :class => "btn btn-sm btn-outline-primary" %></p></div>
</div>
<% end %>

